<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/stock_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock Info"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/perishable_sticker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perishable"
        android:textColor="@android:color/white"
        android:background="@drawable/lozenge_background"
        android:padding="7dp"
        android:visibility="visible"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/edit_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter new quantity"
        android:inputType="number" />

    <Button
        android:id="@+id/update_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Quantity" />
</LinearLayout>